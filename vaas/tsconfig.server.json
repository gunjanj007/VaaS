{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["app", "node_modules"]
}
